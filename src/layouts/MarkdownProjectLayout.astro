---
import PortfolioLayout from "@/layouts/PortfolioLayout.astro";

const projectListTitle = "More Work";
const { frontmatter } = Astro.props;
---

<PortfolioLayout
  pageTitle={frontmatter.displayTitle}
  projectListTitle={projectListTitle}
>
  <article class="mx-auto mb-8 max-w-3xl text-center">
    <div class="pb-4">
      <h1>{frontmatter.displayTitle}</h1>
      {
        frontmatter.description && (
          <p class="italic text-gray-400">
            &mdash;{frontmatter.description}&mdash;
          </p>
        )
      }
    </div>
    <slot />
    <img
      alt="max elbo"
      src="/signature.png"
      width={202}
      height={204}
      class="w-[30px] lg:w-[35px]"
      loading="lazy"
    />
    <hr />
  </article>
</PortfolioLayout>
