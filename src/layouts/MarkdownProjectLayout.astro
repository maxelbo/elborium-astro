---
import PortfolioLayout from "@/layouts/PortfolioLayout.astro";
import { Image } from "astro:assets";
import signature from "~/public/signature.webp";

const projectListTitle = "More Work";
const { frontmatter } = Astro.props;
const { displayTitle, description } = frontmatter;
const pageTitle = displayTitle;
---

<PortfolioLayout {pageTitle} {projectListTitle}>
  <article class="mx-auto mb-8 max-w-3xl text-center">
    <div class="pb-4">
      <h1>{pageTitle}</h1>
      {
        description && (
          <p class="italic text-gray-500">&mdash;{description}&mdash;</p>
        )
      }
    </div>
    <slot />
    <Image alt="max elbo" src={signature} class="w-[30px] mt-8 lg:w-[35px]" />
    <hr />
  </article>
</PortfolioLayout>
