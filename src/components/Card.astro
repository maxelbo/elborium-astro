---
const { title, displayTitle, url, description } = Astro.props;
---

<a
  id={title}
  href={url}
  class="m-4 text-gray-700 transition hover:text-gray-500 hover:no-underline hover:opacity-90 focus:text-gray-500"
>
  <img
    alt={`${title} card`}
    src={`/assets/cards/card-${title}.png`}
    width="252"
    height="350"
    loading="lazy"
  />
  <div class="text-center">
    <h3>{displayTitle}</h3>
    <p class="-mt-1 italic text-gray-400">
      &mdash;{description}&mdash;
    </p>
  </div>
</a>
