---
const pathname = Astro.url.pathname;
---

<nav class="nav-links hidden sm:block">
  <div class="flex justify-center space-x-8">
    {
      pathname === "/about/" ? (
        <a href="/">Home</a>
      ) : (
        <a href="/about/">About</a>
      )
    }
    {pathname === "/posts/" ? <a href="/">Home</a> : <a href="/posts/">Blog</a>}
  </div>
</nav>
