---
const pathname = Astro.url.pathname;
---

<nav
  id="nav-links"
  class="hidden sm:block"
  role="menu"
  aria-labelledby="hamburger"
>
  <div
    class="absolute top-20 right-8 flex flex-col rounded border border-gray-100 bg-white p-4 shadow-sm sm:static sm:flex-row sm:justify-center sm:space-x-8 sm:border-none sm:shadow-none"
  >
    {
      pathname === "/about/" ? (
        <a href="/">Home</a>
      ) : (
        <a href="/about/">About</a>
      )
    }
    {
      pathname.indexOf("/posts/") ? (
        // <a href="/posts/1">Blog</a>
        <a href="https://maxelbo.tumblr.com/">Blog</a>
      ) : (
        <a href="/">Home</a>
      )
    }
  </div>
</nav>
