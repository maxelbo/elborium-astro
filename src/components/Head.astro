---
import { ViewTransitions } from "astro:transitions";
import { capitalize } from "@/scripts/tagActions";

const { pageTitle } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width" />
  <title>Elborium{pageTitle && ` - ${capitalize(pageTitle)}`}</title>
  <meta
    name="description"
    content="Hi, I'm Max Elbo, and this is my portfolio."
  />
  <meta name="author" content="Max Elbo" />
  <meta name="generator" content={Astro.generator} />
  <meta
    name="keywords"
    content="illustration, frontend development, web design"
  />
  <!-- Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,400;0,700;1,400;1,700&display=swap"
    rel="stylesheet"
  />
  <!-- Google tag (gtag.js) -->
  <script
    async
    type="text/partytown"
    src="https://www.googletagmanager.com/gtag/js?id=G-GE5E4YE6YL"
  ></script>
  <script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-GE5E4YE6YL");
  </script>
  <ViewTransitions />
</head>
