---
import Image from "./Image.astro";

const { timelineData } = Astro.props;
const { earlyLife } = Astro.props;
---

<div>
  <ul
    class="timeline relative mx-auto mt-5 mb-0 w-full list-none px-0 pt-20 pb-8 md:w-[660px] md:py-16"
  >
    {
      timelineData.map((item: any) => (
        <li class="px-0 py-2 md:py-1">
          <div class={item.direction}>
            <div class="flag-wrapper">
              {item.logo && (
                <Image src={item.logo} alt="logo" className="timeline-logo" />
              )}
              <span class="flag">{item.title}</span>
              <div class="details-wrapper">
                <span class="date m-auto inline-block w-fit bg-slate-100 px-2 py-1">
                  {item.date}
                </span>
                <span class="place m-auto inline-block w-fit bg-slate-100 px-2 py-1">
                  {item.place}
                </span>
              </div>
            </div>
            <div class="desc bg-slate-100 shadow-sm">
              <p>{item.description}</p>
              <div class="info-wrapper">
                {item.clients && (
                  <div class="info">
                    <strong>Clients:</strong>
                    <ul>
                      {item.clients.map((client: string) => (
                        <li class="bg-slate-200 !py-0 !px-2 shadow-md">
                          {client}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
                {item.skills && (
                  <div class="info block">
                    <strong>Skills:</strong>
                    <ul class="">
                      {item.skills.map((skill: string) => (
                        <li class="bg-slate-200 !py-0 !px-2 shadow-md">
                          {skill}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
  <div>
    <h3>Early Life</h3>
    <ul class="space-y-4 text-sm">
      {
        earlyLife.map((event) => (
          <li>
            <span class="time bg-slate-50 py-0 text-[10px]">{event.date}</span>
            <p>{event.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  .timeline:before {
    position: absolute;
    left: 50%;
    top: 0;
    content: " ";
    display: block;
    width: 1px;
    height: 100%;
    margin-left: -3px;
    background: rgb(80, 80, 80);
    background: -moz-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: -webkit-gradient(
      linear,
      left top,
      left bottom,
      color-stop(0%, rgba(30, 87, 153, 1)),
      color-stop(100%, rgba(125, 185, 232, 1))
    );
    background: -webkit-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: -o-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: -ms-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: linear-gradient(
      to bottom,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );

    z-index: 5;
  }

  .timeline li {
    padding: 2em 0;
  }

  .timeline li:after {
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
  }

  @media (min-width: 768px) {
    .timeline li {
      padding: 1em 0;
    }
  }

  .direction-l,
  .direction-r {
    position: relative;
    float: none;
    width: 100%;
    text-align: center;
  }

  .direction-l .flag::before,
  .direction-r .flag::before {
    position: absolute;
    top: -30px;
    left: 50%;
    content: " ";
    display: block;
    width: 12px;
    height: 12px;
    margin-left: -9px;
    background: #fff;
    border-radius: 10px;
    border: 1px solid var(--black);
    z-index: 10;
  }

  @media (min-width: 768px) {
    .direction-l,
    .direction-r {
      width: 300px;
    }

    .direction-l {
      float: left;
      text-align: right;
    }

    .direction-r {
      float: right;
      text-align: left;
    }

    .direction-l .flag::before,
    .direction-r .flag::before {
      top: 33%;
    }

    .direction-r .flag::before {
      right: auto;
      left: -30px;
    }

    .direction-l .flag::before {
      right: -33px;
      left: auto;
    }
  }

  .flag-wrapper {
    position: relative;
    display: inline-block;
    text-align: center;
  }

  .flag {
    position: relative;
    display: inline;
    padding: 6px 10px;
    border-radius: 5px;
    z-index: 15;
    font-weight: 600;
    text-align: left;
    color: white;
    background: black;
  }

  .direction-l .flag {
    -webkit-box-shadow: -1px 1px 1px rgba(0, 0, 0, 0.15),
      0 0 1px rgba(0, 0, 0, 0.15);
    -moz-box-shadow: -1px 1px 1px rgba(0, 0, 0, 0.15),
      0 0 1px rgba(0, 0, 0, 0.15);
    box-shadow: -1px 1px 1px rgba(0, 0, 0, 0.15), 0 0 1px rgba(0, 0, 0, 0.15);
  }

  .direction-r .flag {
    -webkit-box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.15),
      0 0 1px rgba(0, 0, 0, 0.15);
    -moz-box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.15),
      0 0 1px rgba(0, 0, 0, 0.15);
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.15), 0 0 1px rgba(0, 0, 0, 0.15);
  }

  .direction-l .flag:after,
  .direction-r .flag:after {
    content: "";
    position: absolute;
    left: 47%;
    top: -15px;
    height: 0;
    width: 0;
    margin-left: -8px;
    border: solid transparent;
    border-bottom-color: black;
    border-width: 8px;
    pointer-events: none;
  }

  .timeline-logo {
    position: absolute;
    top: -46px;
    left: 52%;
    width: 30px;
    height: 30px;
    margin-left: -20px;
    background: #fff;
    border-radius: 50%;
    z-index: 16;
  }

  @media (min-width: 768px) {
    .direction-l .flag:after,
    .direction-r .flag:after {
      left: auto;
      top: 50%;
      margin-left: auto;
      margin-top: -5%;
      border-width: 5px;
      border-bottom-color: white;
    }

    .direction-l .flag:after {
      left: 100%;
      border-left-color: black;
    }

    .direction-r .flag:after {
      right: 100%;
      border-right-color: black;
    }

    .direction-r .timeline-logo {
      position: absolute;
      top: -8px;
      right: auto;
      left: -33px;
      width: 40px;
      height: 40px;
      margin-left: -20px;
      background: #fff;
      border-radius: 50%;
      z-index: 16;
    }

    .direction-l .timeline-logo {
      position: absolute;
      top: -8px;
      right: -47px;
      left: auto;
      width: 40px;
      height: 40px;
      margin-left: -20px;
      background: #fff;
      border-radius: 50%;
      z-index: 16;
    }
  }

  .details-wrapper {
    display: flex;
    gap: 5px;
    flex-flow: column;
    line-height: 1em;
    color: var(--black);
    font-size: 10px;
    position: relative;
    margin: 4px 0 0 0;
    vertical-align: middle;
    z-index: 14;
  }

  @media (min-width: 768px) {
    .details-wrapper {
      display: flex;
      gap: 5px;
    }

    .direction-l .details-wrapper {
      float: left;
      flex-flow: row-reverse;
    }

    .direction-r .details-wrapper {
      float: right;
      flex-flow: row;
    }
  }

  .desc {
    position: relative;
    margin: 1em auto 0;
    padding: 1em;
    font-size: 14px;
    /* font-style: italic; */
    line-height: 1.5em;
    z-index: 15;
    text-align: left;
    max-width: 400px;
  }

  @media (min-width: 768px) {
    .desc {
      margin: 1em 0.75em 0 0;
    }

    .direction-r .desc {
      margin: 1em 0 0 0.75em;
    }
  }

  .info-wrapper {
    display: flex;
    flex-flow: column wrap;
    gap: 1rem;
    margin: 0 0 0.5em 0;
    z-index: 15;
  }

  .info ul {
    display: flex;
    flex-flow: row wrap;
    gap: 5px 5px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>
