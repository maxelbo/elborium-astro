---
import Image from "./Image.astro";

const earlyLifeIsActive = false;

const { timelineData } = Astro.props;
const { earlyLife } = Astro.props;
---

<div>
  <ul
    class="timeline relative m-auto w-full list-none px-0 pt-16 pb-8 md:w-[660px] md:py-16"
  >
    {
      timelineData.map((item: any) => (
        <li class="px-0 py-9 md:py-4">
          <div class={`group ${item.direction} relative w-full md:w-[300px]`}>
            <div class="flag-wrapper relative inline-block">
              {item.logo && (
                <Image
                  src={item.logo}
                  alt="logo"
                  className="timeline-logo absolute -top-12 left-[50%] z-20 -ml-4 h-8 w-8 rounded-full bg-black md:-top-2 md:-ml-5 md:h-10 md:w-10"
                />
              )}
              <span class="flag relative z-10 inline rounded bg-black py-1 px-2 text-left font-semibold text-white shadow-sm">
                {item.title}
              </span>
              <div class="details-wrapper">
                <span class="date m-auto inline-block w-fit bg-slate-100 px-2 py-1">
                  {item.date}
                </span>
                <span class="place m-auto inline-block w-fit bg-slate-100 px-2 py-1">
                  {item.place}
                </span>
              </div>
            </div>
            <div class="desc relative z-10 mx-auto mt-2 mb-0 max-w-sm bg-slate-100 p-4 text-left text-sm shadow-sm md:mt-4 md:group-[.dir-l]:mr-3 md:group-[.dir-r]:ml-3">
              <p>{item.description}</p>
              <div class="info-wrapper z-20 mx-0 my-2 flex flex-col flex-wrap gap-4">
                {item.clients && (
                  <div class="info">
                    <strong>Clients:</strong>
                    <ul class="m-0 flex list-none flex-row flex-wrap gap-1 p-0">
                      {item.clients.map((client: string) => (
                        <li class="bg-slate-200 py-0 px-2 shadow-md">
                          {client}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
                {item.skills && (
                  <div class="info block">
                    <strong>Skills:</strong>
                    <ul class="m-0 flex list-none flex-row flex-wrap gap-1 p-0">
                      {item.skills.map((skill: string) => (
                        <li class="bg-slate-200 py-0 px-2 shadow-md">
                          {skill}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          </div>
        </li>
      ))
    }
  </ul>
  {
    earlyLifeIsActive && (
      <div>
        <h3>Early Life</h3>
        <ul class="space-y-4 text-sm">
          {earlyLife.map((event: any) => (
            <li>
              <span class="time bg-slate-100 py-0 px-2 text-[10px]">
                {event.date}
              </span>
              <p>{event.description}</p>
            </li>
          ))}
        </ul>
      </div>
    )
  }
</div>

<style>
  .timeline:before {
    position: absolute;
    left: 50%;
    top: 0;
    content: " ";
    display: block;
    width: 1px;
    height: 100%;
    /* margin-left: -3px; */
    background: rgb(80, 80, 80);
    background: -moz-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: -webkit-gradient(
      linear,
      left top,
      left bottom,
      color-stop(0%, rgba(30, 87, 153, 1)),
      color-stop(100%, rgba(125, 185, 232, 1))
    );
    background: -webkit-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: -o-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: -ms-linear-gradient(
      top,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );
    background: linear-gradient(
      to bottom,
      rgba(80, 80, 80, 0) 0%,
      rgb(80, 80, 80) 8%,
      rgb(80, 80, 80) 92%,
      rgba(80, 80, 80, 0) 100%
    );

    z-index: 5;
  }

  .timeline li:after {
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
  }

  .dir-l,
  .dir-r {
    float: none;
  }

  .dir-l .flag::before,
  .dir-r .flag::before {
    position: absolute;
    top: -30px;
    left: 50%;
    content: " ";
    display: block;
    width: 12px;
    height: 12px;
    margin-left: -9px;
    background: #fff;
    border-radius: 10px;
    border: 1px solid var(--black);
    z-index: 10;
  }

  @media (min-width: 768px) {
    .dir-l {
      float: left;
      text-align: right;
    }

    .dir-r {
      float: right;
      text-align: left;
    }

    .dir-l .flag::before,
    .dir-r .flag::before {
      top: 33%;
    }

    .dir-r .flag::before {
      right: auto;
      left: -30px;
    }

    .dir-l .flag::before {
      right: -33px;
      left: auto;
    }
  }

  .dir-l .flag:after,
  .dir-r .flag:after {
    content: "";
    position: absolute;
    left: 50%;
    top: -15px;
    height: 0;
    width: 0;
    margin-left: -8px;
    border: solid transparent;
    border-bottom-color: black;
    border-width: 8px;
    pointer-events: none;
  }

  @media (min-width: 768px) {
    .dir-l .flag:after,
    .dir-r .flag:after {
      left: auto;
      top: 50%;
      margin-left: auto;
      margin-top: -5%;
      border-width: 5px;
      border-bottom-color: white;
    }

    .dir-l .flag:after {
      left: 100%;
      border-left-color: black;
    }

    .dir-r .flag:after {
      right: 100%;
      border-right-color: black;
    }

    .dir-r .timeline-logo {
      right: auto;
      left: -30px;
    }

    .dir-l .timeline-logo {
      right: -50px;
      left: auto;
    }
  }

  .details-wrapper {
    display: flex;
    gap: 5px;
    flex-flow: column;
    line-height: 1em;
    color: var(--black);
    font-size: 10px;
    position: relative;
    margin: 4px 0 0 0;
    vertical-align: middle;
    z-index: 14;
  }

  @media (min-width: 768px) {
    .dir-l .details-wrapper {
      float: left;
      flex-flow: row-reverse;
    }

    .dir-r .details-wrapper {
      float: right;
      flex-flow: row;
    }
  }
</style>
