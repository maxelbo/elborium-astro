---
import TagsLayout from "@/layouts/TagsLayout.astro";
import ProjectsList from "@/components/ProjectsList.astro";
import { dekebabize } from "@/scripts/tagActions";

export async function getStaticPaths() {
  const allPosts = await Astro.glob("./*.mdx");

  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredProjects = allPosts.filter((post) =>
      post.frontmatter.tags.includes(tag)
    );
    const pubProjects = filteredProjects.filter(
      (post) => !post.frontmatter.private
    );
    return {
      params: { tag },
      props: { posts: pubProjects },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<TagsLayout pageTitle={dekebabize(tag)}>
  <ProjectsList
    projectListTitle={`${dekebabize(tag)} projects`}
    projects={posts}
  />
</TagsLayout>
