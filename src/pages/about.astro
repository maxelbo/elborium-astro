---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Accordion from "@/components/Accordion.astro";
const pageTitle = "About";
const currentInfo = true;

const profile = {
  name: "Max Elbo",
  email: "hello.maxelbo@gmail.com",
  emailBot: "hello.maxelbo at gmail.com",
  firstCompany: "Ogilvy & Mather",
  firstTitle: "a Junior Art Director",
  secondTitle: "an Art Director",
  secondCompany: "BBDO Argentina",
  thirdCompany: "J. Walter Thompson Dubai",
  fourthCompany: "Amplifier",
  currentCompany: "Deloitte",
  currentTitle: "a Frontend Developer",
  currentLocation: "Tokyo, Japan",
  creativeAwards: [
    {
      title: "Cannes Lions",
      awards: ["Silver + Bronce - AMIA - The Bread of Memory (2013)"],
    },
    {
      title: "Dubai Lynx",
      awards: [
        "Grand Prix - Kinokuniya - Cost (2017)",
        "Silver + Bronze (x2) - Boecker - Pestryoshkas (2017)",
      ],
    },
    {
      title: "New York Festivals",
      awards: ["Bronze - Boecker - Pestryoshkas (2017)"],
    },
    {
      title: "Clio",
      awards: ["Bronze (x2) - AMIA - The Bread of Memory (2013)"],
    },
    {
      title: "EFFIE",
      awards: ["Silver - AMIA - The Bread of Memory (2013)"],
    },
    {
      title: "Wave Festival",
      awards: [
        "Gold (x2) + Silver + Bronze - AMIA - The Bread of Memory (2013)",
      ],
    },
    {
      title: "El sol",
      awards: [
        "Gold - AMMAR - Mom Calling Cards (2012)",
        "Gold + Bronze - AMIA - The Bread of Memory (2013)",
      ],
    },
    {
      title: "Yahoo Big Idea Chair Argentina",
      awards: ["Winner - AMIA - The Bread of Memory (2012)"],
    },
    {
      title: "Lories",
      awards: [
        "Silver - Infiniti - See What You Don't (2019) (as an illustrator)",
      ],
    },
    {
      title: "El diente",
      awards: [
        "Gold - AMIA - The Bread of Memory (2012)",
        "Bronze - Dr. Lemon - Kung Fu (2013)",
        "Bronze - Mercado - Make Sense where the World Doesn't (2015) (as an illustrator)",
      ],
    },
    {
      title: "FIAP",
      awards: [
        "Gold - AMIA - The Bread of Memory (2014)",
        "Silver + Bronze - AMMAR - Mom Calling Cards (2012)",
      ],
    },
    {
      title: "Antigua Festival",
      awards: ["Gold - AMIA - The Bread of Memory (2013)"],
    },
  ],
  exhibitions: [
    "2009 - Grand Small Works, juried art exhibition, F.U.E.L Collection Gallery, Philadelphia, PA",
    "2010 - Solo Exhibition, Centro Cultural Belleasco, Buenos Aires, Argentina",
    "2015 - Café con Cuento, Galería Escaparate, Valparaíso, Chile",
    "2015 - Solo Exhibition, Biblioteca Viva Norte, Santiago, Chile",
    "2016 - Dē Rādīcibus —a show with my siblings—, Biblioteca Viva Tobalaba, Santiago, Chile",
    "2016 - Solo Exhibition, Biblioteca Viva Sur, Santiago, Chile",
    "2016 - Art Stgo, GAM, Santiago, Chile",
  ],
};
---

<BaseLayout pageTitle={pageTitle}>
  <main class="mx-auto max-w-full">
    <img
      alt="head image now"
      src="/assets/about/head-now.jpg"
      width={1904}
      height={354}
      class="mx-auto mb-2 w-4/5 sm:mb-4 sm:w-3/5"
    />
    <!-- <div class="relative mx-auto h-[90px] w-4/5 sm:h-[170px] sm:w-3/5">
      <img
        alt="head image"
        src="/assets/about/head.jpg"
        width={1904}
        height={354}
        class="absolute inset-0"
      />
      <img
        alt="head image now"
        src="/assets/about/head-now.jpg"
        width={1904}
        height={354}
        class="absolute inset-0 opacity-0 transition-opacity duration-300 hover:opacity-100"
      />
    </div> -->
    <div class="mx-auto max-w-3xl space-y-12 px-8 text-center">
      <section>
        <p class="font-bold">Hi,</p>
        <p>{`I'm ${profile.name}.`}</p>
        {
          currentInfo && (
            <p>
              I'm currently working at <strong>{profile.currentCompany}</strong>{" "}
              in
              {profile.currentLocation}.
            </p>
          )
        }
        <p>
          You can contact me <a class="underline" href=`mailto:${profile.email}`
            >here</a
          >.
        </p>
      </section>
      <section class="space-y-12">
        <img src="/assets/about/eye-open.png" class="hidden" />
        <Accordion title="Career">
          <p>
            I was born in Chile and started working at <strong
              >{profile.firstCompany}</strong
            > in Buenos Aires, Argentina, as {profile.firstTitle} in 2011. By the
            end of 2012 I moved to <strong>{profile.secondCompany}</strong>, and
            a year later I started working as a full-time <strong
              >Freelance Illustrator</strong
            > doing editorial and advertising work, part of it while living in a
            small town in the mountains of Mexico, in the middle of nowhere. In 2016
            I started working as {profile.secondTitle} at <strong
              >{profile.thirdCompany}</strong
            >, and since January 2018 I've been working in {
              profile.currentLocation
            }, first at <strong>{profile.fourthCompany}</strong>, doing
            illustration and animation, and since June 2020, at
            <strong>{profile.currentCompany}</strong>, where I'm currently doing
            frontend development.
          </p>
        </Accordion>
        <Accordion title="Awards">
          {
            profile.creativeAwards.map(({ title, awards }) => (
              <div id={title}>
                <h3 class="font-bold">{title}</h3>
                <ul class="list-none">
                  {awards.map((award) => (
                    <li id={award}>{award}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </Accordion>
        <Accordion title="Exhibitions">
          {
            profile.exhibitions.map((exhibition) => (
              <p id={exhibition}>{exhibition}</p>
            ))
          }
        </Accordion>
      </section>
    </div>
    <img
      alt="head image"
      src="/assets/about/shoes.jpg"
      width="1340"
      height="309"
      class="my-8 mx-auto w-4/5 sm:w-6/12"
    />
  </main>
  <h2 class="mt-16 capitalize">This is my work</h2>
</BaseLayout>
